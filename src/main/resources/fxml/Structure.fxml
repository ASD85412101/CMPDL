<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTabPane?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.franckyi.cmpdl.controller.StructureController">
   <top>
         <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="bg-primary-variant" BorderPane.alignment="CENTER">
             <children>
            <MaterialDesignIconView glyphName="DOWNLOAD" size="24" />
            <Label prefWidth="600.0" text="CMPDL v3.0.0">
               <font>
                  <Font name="Roboto" size="20.0" />
               </font>
            </Label>
                 <MaterialDesignIconView glyphName="WINDOW_MINIMIZE" onMouseClicked="#clickMinimize" size="24">
                     <cursor>
                         <Cursor fx:constant="HAND" />
                     </cursor>
                 </MaterialDesignIconView>
                 <MaterialDesignIconView glyphName="CLOSE" onMouseClicked="#clickClose" size="24">
                     <cursor>
                         <Cursor fx:constant="HAND" />
                     </cursor>
                 </MaterialDesignIconView>
             </children>
             <padding>
                 <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
             </padding>
         </HBox>
   </top>
   <center>
       <JFXTabPane fx:id="tabPane" side="BOTTOM" />
   </center>
</BorderPane>
